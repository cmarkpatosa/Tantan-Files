<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>DILG XII | SMIS</title>
    <!-- IonIcons -->
    <link href="~/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    @Styles.Render("~/adminlte/css")
    <!-- Google Font: Source Sans Pro -->
</head>
<body class="hold-transition sidebar-mini layout-navbar-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>

            </ul>

            @*<!-- SEARCH FORM -->
                <form class="form-inline ml-3">
                    <div class="input-group input-group-sm">
                        <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-navbar" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>*@

            <!-- Right navbar links -->
            @*            NOTIFICATION LINE *@
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">SMIS</span>
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@Session["AccountName"]</a>
                    </div>
                    <input type="hidden" id="spnAccountName" value="@Session["AccountName"]" />
                    <input type="hidden" id="hidDivisionID" value="@Session["DivisionID"]" />
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column nav-flat" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="~/Dashboard/Index" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    Dashboard
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/ManagePR/PRList" class="nav-link">
                                <i class="fas fa-file-alt nav-icon"></i>
                                <p>List of PRs </p>
                            </a>
                        </li>
                        @*<li class="nav-item has-treeview menu-open">*@
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-file"></i>
                                <p>
                                    Manage PR
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                
                                <li class="nav-item">
                                    <a href="~/ManagePR/CreatePR" class="nav-link">
                                        <i class="fas fa-file-signature nav-icon"></i>
                                        <p>
                                            Purchase Request
                                            @*<span class="badge badge-secondary right">1</span>*@
                                            <span class="badge bg-danger right lblreturned">0</span>
                                            <span class="badge bg-success right lblOnProcess">0</span>
                                            @*<span class="badge bg-warning right lblpreparing">0</span>*@
                                        </p>
                                    </a>
                                </li>
                                @{
                                    string role = Convert.ToString(Session["Role"]);
                                    if (role == "Process Owner")
                                    {
                                        int officeID = Convert.ToInt32(Session["OfficeID"]);
                                        if (officeID == 2)
                                        {
                                            <li class="nav-item">
                                                <a href="~/ManagePR/CreatePO" class="nav-link">
                                                    <i class="fas fa-file-signature nav-icon"></i>
                                                    <p>Purchase Order</p>
                                                </a>
                                            </li>
                                            @*<li class="nav-item">
                                                <a href="~/ManagePR/Create PAR" class="nav-link">
                                                    <i class="fas fa-file-alt nav-icon"></i>
                                                    <p>PAR</p>q
                                                </a>
                                            </li>*@
                                        }
                                        else if (officeID == 1)
                                        {
                                            <li class="nav-item">
                                                <a href="~/ManagePR/CreateCanvass" class="nav-link">
                                                    <i class="fas fa-file-signature nav-icon"></i>
                                                    <p>Create Canvass</p>
                                                </a>
                                            </li>
                                        }
                                        <li class="nav-item">
                                            <a href="~/ManagePR/OnProcess" class="nav-link">
                                                <i class="far fa-check-square nav-icon"></i>
                                                <p>On Process</p>
                                                <span class="badge badge-warning right lblOnProcessOwner">0</span>
                                            </a>
                                        </li>
                                    }
                                }
                                @*<li class="nav-item">
                                     <a href="#" class="nav-link">
                                         <i class="fas fa-shopping-cart nav-icon"></i>
                                         <p>For Purchase Order</p>
                                     </a>
                                </li>*@
                                <li class="nav-item">
                                    <a href="~/ManagePR/Cancelled" class="nav-link">
                                        <i class="fas fa-file-alt nav-icon"></i>
                                        <p>Cancelled PRs </p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        @*<li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-truck-loading"></i>
                                    <p>
                                        Inventory
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="~/PropertyManagement/CreateItem" class="nav-link">
                                            <i class="fas fa-file-signature nav-icon"></i>
                                            <p>New Item </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#" class="nav-link">
                                            <i class="fas fa-address-book nav-icon"></i>
                                            <p>Property Assignment </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#" class="nav-link">
                                            <i class="fas fa-clipboard-list nav-icon"></i>
                                            <p>List of Properties </p>
                                        </a>
                                    </li>
                                </ul>
                            </li>*@
                        @if (role == "Administrator")
                        {
                            <li class="nav-item">
                                <a href="~/User/UserList" class="nav-link">
                                    <i class="nav-icon fas fa-users"></i>
                                    <p>
                                        User Account
                                    </p>
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a href="~/User/Logout" class="nav-link">
                                <i class="fas fa-sign-out-alt"></i>
                                <p>
                                    Sign out
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">@ViewBag.PageTitle</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">@ViewBag.Controller</a></li>
                                <li class="breadcrumb-item active">@ViewBag.Action</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            @Scripts.Render("~/adminlte/jquery_script")
            <script src="~/plugins/jquery/jquery.min.js"></script>
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="card">
                                <div class="card-body">
                                    @RenderBody()
                                </div>
                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                    <!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        @*<i class="fas fa-bars"></i>*@
        <footer class="main-footer">
            <strong>Copyright &copy; 2020 <a href="#">DILG Region 12 | Regional Information and Communication Technology Unit</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>SMIS</b>
            </div>
        </footer>
    </div>
    <!-- ./wrapper -->
    @Scripts.Render("~/adminlte/jquery")
    @*@Scripts.Render("~/plugins/bootstrap/js/bootstrap.bundle.min.js")
        @Scripts.Render("~/plugins/datatables/jquery.dataTables.js")
        @Scripts.Render("~/plugins/datatables-bs4/js/dataTables.bootstrap4.js")
        @Scripts.Render("~/plugins/moment/moment.min.js")
        @Scripts.Render("~/plugins/inputmask/min/jquery.inputmask.bundle.min.js")
        @Scripts.Render("~/plugins/daterangepicker/daterangepicker.js")
        @Scripts.Render("~/plugins/chart.js/Chart.min.js")
        @Scripts.Render("~/dist/js/demo.js")
        @Scripts.Render("~/dist/js/adminlte.min.js")*@
    @Scripts.Render("~/Scripts/jquery.signalR-2.1.2.min.js")
    @Scripts.Render("~/signalr/hubs")
    @Scripts.Render("~/Scripts/userdefined/jsGlobal.js")
    @RenderSection("scripts", required: false)
    @*<audio id="myAudio">
        <source src="~/dist/Notification.mp3" type="audio/mpeg">
    </audio>*@
</body>
</html>
